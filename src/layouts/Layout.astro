---
import Nav from '@/layouts/Nav.astro'
import { ViewTransitions } from 'astro:transitions'
import { getLangFromUrl } from '@/i18n/utils'
import { getSectionByRoute } from '@/composables/sections'

const lang = getLangFromUrl(Astro.url)
const title = getSectionByRoute(Astro.url.pathname, lang)?.title
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/zinx-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{`${title} - Zinx`}</title>
  </head>
  <body>
    <header>
      <Nav />
    </header>
    <slot />
  </body>
</html>
