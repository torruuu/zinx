---
import LogoZinxSvg from '@/components/svg/LogoZinxSvg.vue'
---

<div class="logo-container">
  <a
    data-astro-reload
    href="/"
    class="logo-container__svg"
    title="Logo Zinx"
    aria-label="Go to home page"
  >
    <LogoZinxSvg />
  </a>
  <div class="logo-container__title">
    <h1>Zinx</h1>
  </div>
</div>

<style lang="scss">
  .logo-container {
    height: 100%;
    width: map-get($map: $sizes, $key: s-nav-logo);
    @include flex();
    &__svg {
      width: 100%;
      @include flex();
    }
    &__title {
      display: none;
    }
  }
</style>
